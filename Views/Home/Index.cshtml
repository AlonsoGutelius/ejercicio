@model List<Producto>
    @{
        ViewData["Tittle"] = "Home page";

    }
    @if(Model.Count() == 0) {
        <p class="text-center">No tenemos productos para mostrar en este momento</p>
    }else {
        <div class="row">
            @foreach (var producto in Model)
            {
                <div class="col-4 text-center">
                    <h2>@producto.Nombre</h2>
                    <img src="@producto.Foto" class="img-fluid"/>
                    <p>@producto.Precio.ToString("C")</p>
                    <p>@producto.Descripcion</p>
                </div>
            }
        </div>
    }
